{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "simple-postgis",
        "annotations": {
            "openshift.io/display-name": "PostGIS from CrunchyData Solutions",
            "description": "PostGIS DB for your simple use case",
            "tags": "quickstart,postgresql,postgis",
            "iconClass": "icon-apache",
            "openshift.io/provider-display-name": "Red Hat, Inc. and Crunchy Data Solutions",
            "openshift.io/documentation-url": "https://github.com/cruncycontainers/examples/openshift/pro",
            "template.openshift.io/bindable": "false"
        }
    },
    "message": "We made your PostGIS database for you",
    "labels": {
        "template": "postgis crunchydatasolutions",
        "app": "postgis"
    },
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${DATABASE_SERVICE_NAME}",
                "labels": {
                    "name": "${DATABASE_SERVICE_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 5432,
                        "targetPort": 5432,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "name": "${DATABASE_SERVICE_NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${DATABASE_SERVICE_NAME}"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${VOLUME_CAPACITY}"
                    }
                }
            }
        },
        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "primary",
                "labels": {
                    "name": "primary"
                }
            },
            "spec": {
                "securityContext": {
                },
                "volumes": [
                    {
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "${DATABASE_SERVICE_NAME}"
                        }
                    },
                    {
                        "name": "pgconf",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "pgwal",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "backup",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "recover",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    },
                    {
                        "name": "backrestrepo",
                        "emptyDir": {
                            "medium": "Memory"
                        }
                    }
                ],
                "containers": [
                    {
                        "name": "postgis",
                        "image": "crunchydata/crunchy-postgres-gis:centos7-10.1-1.7.0",
                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "PG_PRIMARY_USER",
                                "value": "${POSTGRESQL_USER}"
                            },
                            {
                                "name": "PG_MODE",
                                "value": "primary"
                            },
                            {
                                "name": "PG_PRIMARY_PASSWORD",
                                "value": "${POSTGRESQL_PASSWORD}"
                            },
                            {
                                "name": "PG_PRIMARY_PORT",
                                "value": "5432"
                            },
                            {
                                "name": "PG_USER",
                                "value": "testuser"
                            },
                            {
                                "name": "PG_PASSWORD",
                                "value": "password"
                            },
                            {
                                "name": "PG_DATABASE",
                                "value": "${POSTGRESQL_DATABASE}"
                            },
                            {
                                "name": "PGHOST",
                                "value": "/tmp"
                            },
                            {
                                "name": "PG_ROOT_PASSWORD",
                                "value": "${POSTGRESQL_ROOT_PASSWORD}"
                            }
                        ],
                        "volumeMounts": [
                            {
                                "mountPath": "/pgdata",
                                "name": "pgdata",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/pgconf",
                                "name": "pgconf",
                                "readOnly": true
                            },
                            {
                                "mountPath": "/pgwal",
                                "name": "pgwal",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/backup",
                                "name": "backup",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/recover",
                                "name": "recover",
                                "readOnly": false
                            },
                            {
                                "mountPath": "/backrestrepo",
                                "name": "backrestrepo",
                                "readOnly": false
                            }
                        ]
                    }
                ]
            }
        }
    ]
    ,
    "parameters": [
       {
            "name": "NAMESPACE",
            "displayName": "Namespace",
            "description": "The OpenShift Namespace where the ImageStream resides.",
            "value": "openshift"
        },
        {
            "name": "DATABASE_SERVICE_NAME",
            "displayName": "Database Service Name",
            "description": "The name of the OpenShift Service exposed for the database.",
            "value": "postgis",
            "required": true
        },
        {
            "name": "POSTGRESQL_USER",
            "displayName": "PostgreSQL Connection Username",
            "description": "Username for PostgreSQL user that will be used for accessing the database.",
            "generate": "expression",
            "from": "user[A-Z0-9]{3}",
            "required": true
        },
        {
            "name": "POSTGRESQL_PASSWORD",
            "displayName": "PostgreSQL Connection Password",
            "description": "Password for the PostgreSQL connection user.",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{16}",
            "required": true
        },
        {
            "name": "POSTGRESQL_ROOT_PASSWORD",
            "displayName": "PostgreSQL ROOT  Password",
            "description": "Password for the PostgreSQL user.",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{16}",
            "required": true
        },
        {
            "name": "POSTGRESQL_DATABASE",
            "displayName": "PostgreSQL Database Name",
            "description": "Name of the PostgreSQL database accessed.",
            "value": "sampledb",
            "required": true
        },
        {
            "name": "VOLUME_CAPACITY",
            "displayName": "Volume Capacity",
            "description": "Volume space available for data, e.g. 512Mi, 2Gi.",
            "value": "1Gi",
            "required": true
        },
        {
            "name": "POSTGRESQL_VERSION",
            "displayName": "Version of PostgreSQL Image",
            "description": "Version of PostgreSQL image to be used (9.2, 9.4, 9.5 or latest).",
            "value": "9.5",
            "required": true
        },
        {
            "name": "MEMORY_LIMIT",
            "displayName": "Memory Limit",
            "description": "Maximum amount of memory the container can use.",
            "value": "512Mi",
            "required": true
        }
    ]
}
