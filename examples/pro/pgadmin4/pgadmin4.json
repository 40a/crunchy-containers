{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgadmin4",
        "labels": {
            "name": "pgadmin4"
        }
    },
    "spec": {
        "securityContext": {
            "supplementalGroups": [
                65534
            ]
        },
        "volumes": [
            {
                "name": "pgadmin",
                "persistentVolumeClaim": {
                    "claimName": "crunchy-pvc"
                }
            },
            {
                "name": "certs",
                "emptyDir": {
                    "medium": "Memory"
                }
            }
        ],
        "containers": [
            {
                "name": "pgadmin",
                "image": "crunchydata/crunchy-pgadmin4:centos7-10.1-1.8.0",
                "ports": [
                    {
                        "containerPort": 5050,
                        "protocol": "TCP"
                    }
                ],
                "env": [
                    {
                        "name": "PGADMIN_SETUP_EMAIL",
                        "valueFrom": {
                            "secretKeyRef": {
                                "name": "pgadmin-secrets",
                                "key": "pgadmin-email"
                            }
                        }
                    },
                    {
                        "name": "PGADMIN_SETUP_PASSWORD",
                        "valueFrom": {
                            "secretKeyRef": {
                                "name": "pgadmin-secrets",
                                "key": "pgadmin-password"
                            }
                        }
                    }
                ],
                "securityContext": {
                    "capabilities": {}
                },
                "volumeMounts": [
                    {
                        "mountPath": "/var/lib/pgadmin",
                        "name": "pgadmin",
                        "readOnly": false
                    },
                    {
                        "mountPath": "/certs",
                        "name": "certs",
                        "readOnly": true
                    }
                ]
            }
        ]
    }
}
