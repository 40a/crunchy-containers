{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-postgres-database-pvc",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Single Database using PVC",
            "iconClass": "icon-database",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [{
        "name": "SERVICE_NAME",
        "description": "The name to use for the service and container",
        "value": "pgdatabase"
    }, {
        "name": "PG_MASTER_USER",
        "description": "The username used for master-slave replication",
        "value": "master"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to pull with"
    }, {
        "name": "PG_MASTER_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PVC_NAME",
        "description": "The name for the pvc",
        "value": "master-pvc"
    }, {
        "name": "PVC_SIZE",
        "description": "The size for the PVC",
        "value": "500M"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG adminitrator",
        "value": "password"
    }],

    "objects": [{
        "kind": "PersistentVolumeClaim",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PVC_NAME}"
        },
        "spec": {
            "accessModes": [
                "ReadWriteOnce"
            ],
            "resources": {
                "requests": {
                    "storage": "${PVC_SIZE}"
                }
            }
        }
    }, {
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${SERVICE_NAME}",
            "labels": {
                "name": "${SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${SERVICE_NAME}"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${SERVICE_NAME}",
            "labels": {
                "name": "${SERVICE_NAME}"
            }
        },
        "spec": {
            "securityContext": {
                "fsGroup": 26
            },
            "containers": [{
                "name": "${SERVICE_NAME}",
                "image": "172.30.240.45:5000/jeff-project/crunchy-postgres:${CCP_IMAGE_TAG}",
                "imagePullPolicy": "Always",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_MASTER_USER",
                    "value": "${PG_MASTER_USER}"
                }, {
                    "name": "PG_MODE",
                    "value": "master"
                }, {
                    "name": "PG_MASTER_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_USER",
                    "value": "${PG_USER}"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "password"
                }],
                "securityContext": {
                    "capabilities": {}
                },


                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }, {
                    "mountPath": "/backup",
                    "name": "backup",
                    "readOnly": true
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "persistentVolumeClaim": {
                    "claimName": "${PVC_NAME}"
                }
            }, {
                "name": "backup",
                "emptyDir": {}
            }]
        }
    }]
}
