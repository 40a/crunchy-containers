{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-master-sync",
        "annotations": {
            "description": "Crunchy master postgres database that allows a sync slave",
            "iconClass": "icon-database",
            "tags": "crunchy,database,postgresql"
        }
    },
    "parameters": [{
        "name": "PG_MASTER_PORT",
        "description": "The postgresql port",
        "value": "5432"
    }, {
        "name": "PG_MASTER_USER",
        "description": "The username used for master-slave replication",
        "value": "master"
    }, {
        "name": "PGDATA_PATH_OVERRIDE",
        "description": "override for the pgdata path",
        "value": "master"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use"
    }, {
        "name": "SYNC_SLAVE",
        "description": "The sync slave to allow"
    }, {
        "name": "PG_MASTER_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PG server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PG master user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PVC_NAME",
        "description": "The name for the pvc",
        "value": "master-pvc"
    }, {
        "name": "PVC_SIZE",
        "description": "The size for the PVC",
        "value": "300M"
    }, {
        "name": "PVC_ACCESS_MODE",
        "description": "The access mode for the PVC",
        "value": "ReadWriteMany"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PG adminitrator",
        "value": "password"
    }],

    "objects": [{
        "kind": "PersistentVolumeClaim",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PVC_NAME}"
        },
        "spec": {
            "accessModes": [
                "${PVC_ACCESS_MODE}"
            ],
            "resources": {
                "requests": {
                    "storage": "${PVC_SIZE}"
                }
            }
        }
    }, {
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "master",
            "labels": {
                "name": "master"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "master"
            },
            "type": "ClusterIP",
            "sessionAffinity": "None"
        }
    }, {
        "kind": "Deployment",
        "apiVersion": "extensions/v1beta1",
        "metadata": {
            "name": "master",
            "labels": {
                "name": "master"
            }
        },
        "spec": {
            "replicas": 1,
            "selector": {
                "matchLabels": {
                    "name": "master"
                }
            },
            "template": {
                "metadata": {
                    "labels": {
                        "name": "master"
                    }
                },
                "spec": {
                    "containers": [{
                        "name": "master",
                        "image": "crunchydata/crunchy-postgres:${CCP_IMAGE_TAG}",
                        "env": [{
                            "name": "PG_MASTER_PORT",
                            "value": "${PG_MASTER_PORT}"
                        }, {
                            "name": "PG_MODE",
                            "value": "master"
                        }, {
                            "name": "PGDATA_PATH_OVERRIDE",
                            "value": "${PGDATA_PATH_OVERRIDE}"
                        }, {
                            "name": "PG_MASTER_USER",
                            "value": "${PG_MASTER_USER}"
                        }, {
                            "name": "PG_MASTER_PASSWORD",
                            "value": "${PG_MASTER_PASSWORD}"
                        }, {
                            "name": "PG_USER",
                            "value": "${PG_USER}"
                        }, {
                            "name": "PG_PASSWORD",
                            "value": "${PG_PASSWORD}"
                        }, {
                            "name": "PG_DATABASE",
                            "value": "${PG_DATABASE}"
                        }, {
                            "name": "PG_ROOT_PASSWORD",
                            "value": "${PG_ROOT_PASSWORD}"
                        }, {
                            "name": "SYNC_SLAVE",
                            "value": "${SYNC_SLAVE}"
                        }, {
                            "name": "PGHOST",
                            "value": "/tmp"
                        }],
                        "volumeMounts": [{
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }],

                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "resources": {},
                        "imagePullPolicy": "Always"
                    }],
                    "volumes": [{
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "${PVC_NAME}"
                        }
                    }],

                    "restartPolicy": "Always",
                    "terminationGracePeriodSeconds": 30,
                    "dnsPolicy": "ClusterFirst",
                    "securityContext": {}
                }
            },
            "strategy": {
                "type": "RollingUpdate",
                "rollingUpdate": {
                    "maxUnavailable": 1,
                    "maxSurge": 1
                }
            }
        }
    }]
}
