{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "watch",
        "labels": {
            "name": "watch"
        }
    },
    "spec": {
        "serviceAccount": "pg-watcher",
        "containers": [{
            "name": "watch",
            "image": "172.30.240.45:5000/jeff-project/crunchy-watch:1.2.1",
            "imagePullPolicy": "Always",
            "env": [{
                "name": "OSE_PROJECT",
                "value": "jeff-project"
            }, {
                "name": "SLEEP_TIME",
                "value": "20"
            }, {
                "name": "SLAVE_TO_TRIGGER_LABEL",
                "value": "thisone"
            }, {
                "name": "PG_MASTER_SERVICE",
                "value": "pg-master-rc-dc"
            }, {
                "name": "PG_SLAVE_SERVICE",
                "value": "pg-slave-rc-dc"
            }, {
                "name": "PG_MASTER_PORT",
                "value": "5432"
            }, {
                "name": "PG_MASTER_USER",
                "value": "master"
            }, {
                "name": "PG_DATABASE",
                "value": "postgres"
            }]
        }]
    }
}
