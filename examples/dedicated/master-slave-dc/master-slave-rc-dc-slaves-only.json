{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "replica-on-slaves-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Replication with dc on slaves only Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "PG_MASTER_USER",
        "description": "The username used for master-slave replication",
        "value": "master"
    }, {
        "name": "PG_MASTER_PASSWORD",
        "description": "The password for the PostgreSQL replication user",
        "value": "password"
    }, {
        "name": "PG_USER",
        "description": "The username that clients will use to connect to PostgreSQL server",
        "value": "testuser"
    }, {
        "name": "PG_PASSWORD",
        "description": "The password for the PostgreSQL master user",
        "value": "password"
    }, {
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }, {
        "name": "PG_ROOT_PASSWORD",
        "description": "The password for the PostgreSQL administrator",
        "value": "password"
    }, {
        "name": "PG_MASTER_SERVICE_NAME",
        "description": "The name of the PostgreSQL Service (used to DNS lookup, default: 'postgresql-master')",
        "value": "pg-master-rc-dc"
    }, {
        "name": "PG_SLAVE_SERVICE_NAME",
        "description": "The name of the PostgreSQL Service (used to DNS lookup, default: 'postgresql-slave')",
        "value": "pg-slave-rc-dc"
    }],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_MASTER_SERVICE_NAME}",
            "labels": {
                "name": "${PG_MASTER_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PG_MASTER_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_SLAVE_SERVICE_NAME}",
            "labels": {
                "name": "${PG_SLAVE_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PG_SLAVE_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }

    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_MASTER_SERVICE_NAME}",
            "labels": {
                "name": "${PG_MASTER_SERVICE_NAME}"
            }

        },
        "spec": {
            "containers": [{
                    "name": "collect",
                    "image": "172.30.240.45:5000/jeff-project/crunchy-collect:1.2.1",
                    "imagePullPolicy": "Always",
                    "env": [{
                        "name": "PG_MASTER_USER",
                        "value": "${PG_MASTER_USER}"
                    }, {
                        "name": "PG_MASTER_PASSWORD",
                        "value": "${PG_MASTER_PASSWORD}"
                    }, {
                        "name": "PG_PORT",
                        "value": "5432"
                    }, {
                        "name": "PROM_GATEWAY",
                        "value": "http://crunchy-scope:9091"
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "${PG_ROOT_PASSWORD}"
                    }],
                    "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": true
                    }]
                },{
                    "name": "server",
                    "image": "172.30.240.45:5000/jeff-project/crunchy-postgres:1.2.1",
                    "imagePullPolicy": "Always",
                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "env": [{
                        "name": "PG_MASTER_HOST",
                        "value": "${PG_MASTER_SERVICE_NAME}"
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }, {
                        "name": "TEMP_BUFFERS",
                        "value": "9MB"
                    }, {
                        "name": "MAX_CONNECTIONS",
                        "value": "101"
                    }, {
                        "name": "SHARED_BUFFERS",
                        "value": "129MB"
                    }, {
                        "name": "MAX_WAL_SENDERS",
                        "value": "18"
                    }, {
                        "name": "WORK_MEM",
                        "value": "5MB"
                    }, {
                        "name": "PG_MASTER_SERVICE_NAME",
                        "value": "${PG_MASTER_SERVICE_NAME}"
                    }, {
                        "name": "PG_MASTER_PORT",
                        "value": "5432"
                    }, {
                        "name": "PG_MODE",
                        "value": "master"
                    }, {
                        "name": "PG_MASTER_USER",
                        "value": "${PG_MASTER_USER}"
                    }, {
                        "name": "PG_MASTER_PASSWORD",
                        "value": "${PG_MASTER_PASSWORD}"
                    }, {
                        "name": "PG_USER",
                        "value": "${PG_USER}"
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "${PG_ROOT_PASSWORD}"
                    }, {
                        "name": "PG_PASSWORD",
                        "value": "${PG_PASSWORD}"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "${PG_DATABASE}"
                    }],
                    "resources": {},
                    "terminationMessagePath": "/dev/termination-log",
                    "securityContext": {
                        "privileged": false
                    },
                    "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }]

                }
            ],
            "volumes": [{
                "name": "pgdata",
                "emptyDir": {}
            }]

        }
    }, {
        "kind": "DeploymentConfig",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PG_SLAVE_SERVICE_NAME}",
            "creationTimestamp": null
        },
        "spec": {
            "strategy": {
                "type": "Recreate",
                "resources": {}
            },
            "triggers": [{
                "type": "ConfigChange"
            }],
            "replicas": 1,
            "selector": {
                "name": "${PG_SLAVE_SERVICE_NAME}"
            },
            "template": {
                "metadata": {
                    "creationTimestamp": null,
                    "labels": {
                        "name": "${PG_SLAVE_SERVICE_NAME}"
                    }
                },
                "spec": {
                    "containers": [{
                        "name": "server",
                        "image": "172.30.240.45:5000/jeff-project/crunchy-postgres:1.2.1",
                        "imagePullPolicy": "Always",
                        "ports": [{
                            "containerPort": 5432,
                            "protocol": "TCP"
                        }],
                        "env": [{
                            "name": "PG_MASTER_HOST",
                            "value": "${PG_MASTER_SERVICE_NAME}"
                        }, {
                            "name": "PG_MASTER_SERVICE_NAME",
                            "value": "${PG_MASTER_SERVICE_NAME}"
                        }, {
                            "name": "PG_MASTER_PORT",
                            "value": "5432"
                        }, {
                            "name": "PGHOST",
                            "value": "/tmp"
                        }, {
                            "name": "PG_MODE",
                            "value": "slave"
                        }, {
                            "name": "PG_MASTER_USER",
                            "value": "${PG_MASTER_USER}"
                        }, {
                            "name": "PG_MASTER_PASSWORD",
                            "value": "${PG_MASTER_PASSWORD}"
                        }, {
                            "name": "PG_USER",
                            "value": "${PG_USER}"
                        }, {
                            "name": "PG_PASSWORD",
                            "value": "${PG_PASSWORD}"
                        }, {
                            "name": "PG_ROOT_PASSWORD",
                            "value": "${PG_PASSWORD}"
                        }, {
                            "name": "PG_DATABASE",
                            "value": "${PG_DATABASE}"
                        }],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log",
                        "securityContext": {
                            "privileged": false
                        },
                        "volumeMounts": [{
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }]

                    }],
                    "volumes": [{
                        "name": "pgdata",
                        "emptyDir": {}
                    }],

                    "restartPolicy": "Always",
                    "dnsPolicy": "ClusterFirst"
                }
            }
        },
        "status": {}
    }]
}
