{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-postgres-replica-emptydir",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Replica using emptyDir",
            "iconClass": "icon-database",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [
	{
        "name": "CCP_IMAGE_TAG",
        "description": "the image tag to use",
        "value": "rhel7-9.5-1.2.4"
    	},
	{
        "name": "SERVICE_NAME",
        "description": "the name to use for the replica service and pod",
	"value": "pgreplica"
    	},
	{
        "name": "PG_MASTER_HOST",
        "description": "the master service name the replica will connect to",
	"value": "pgdatabase"
    	},
	{
        "name": "PG_MASTER_USER",
        "description": "the master user name the replica will connect with",
	"value": "master"
    	},
	{
        "name": "PG_MASTER_PASSWORD",
        "description": "the master user password the replica will connect with",
	"value": "password"
    	}
	],
    "objects": [
{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${SERVICE_NAME}",
            "labels": { "name": "${SERVICE_NAME}" }
        },
        "spec": {
            "ports": [{
                "name": "postgres",
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": { "name": "${SERVICE_NAME}" },
            "type": "ClusterIP",
            "sessionAffinity": "None"
        }
},

	{
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${SERVICE_NAME}",
            "labels": { "name": "${SERVICE_NAME}" }
        },
        "spec": {
            "containers": [{
                "name": "postgres",
                "image": "172.30.240.45:5000/jeff-project/crunchy-postgres:${CCP_IMAGE_TAG}",
                "imagePullPolicy":"Always",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_MASTER_HOST",
                    "value": "${PG_MASTER_HOST}"
                }, {
                    "name": "PG_MASTER_USER",
                    "value": "${PG_MASTER_USER}"
                }, {
                    "name": "PG_MASTER_PORT",
                    "value": "5432"
                }, {
                    "name": "PG_MODE",
                    "value": "slave"
                }, {
                    "name": "PG_USER",
                    "value": "testuser"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_DATABASE",
                    "value": "userdb"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_MASTER_PASSWORD",
                    "value": "${PG_MASTER_PASSWORD}"
                }],
                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }, {
                    "mountPath": "/backup",
                    "name": "backup",
                    "readOnly": true
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "emptyDir": {}
            }, {
                "name": "backup",
                "emptyDir": {}
            }]
        }
    }]
}
