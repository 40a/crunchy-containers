{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-postgres-master-sync-replica-pvc",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Single master and sync relica which both use a PVC",
            "iconClass": "icon-database",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "description": "the image tag to use",
        "value": "rhel7-9.6-1.2.6"
    }, {
        "name": "REPLICA_SERVICE_NAME",
        "description": "the name of the replica",
        "value": "syncreplica"
    }, {
        "name": "REPLICA_PVC_NAME",
        "description": "the name of the replica pvc",
        "value": "syncreplica-pvc"
    }, {
        "name": "REPLICA_PVC_SIZE",
        "description": "the size of the replica pvc",
        "value": "500M"
    }, {
        "name": "MASTER_SERVICE_NAME",
        "description": "the name of the master",
        "value": "syncmaster"
    }, {
        "name": "MASTER_PVC_NAME",
        "description": "the name of the master pvc",
        "value": "syncmaster-pvc"
    }, {
        "name": "MASTER_PVC_SIZE",
        "description": "the size of the master pvc",
        "value": "500M"
    }, {
        "name": "MASTER_PASSWORD",
        "description": "the password of the master user",
        "value": "password"
    }, {
        "name": "USER_PASSWORD",
        "description": "the password of the test user",
        "value": "password"
    }],
    "objects": [{
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${REPLICA_PVC_NAME}"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${REPLICA_PVC_SIZE}"
                    }
                }
            }
        }, {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${MASTER_PVC_NAME}"
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "${MASTER_PVC_SIZE}"
                    }
                }
            }
        },

        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${REPLICA_SERVICE_NAME}",
                "labels": {
                    "name": "${REPLICA_SERVICE_NAME}"
                }
            },
            "spec": {
                "ports": [{
                    "protocol": "TCP",
                    "port": 5432,
                    "targetPort": 5432,
                    "nodePort": 0
                }],
                "selector": {
                    "name": "${REPLICA_SERVICE_NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        }, {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${MASTER_SERVICE_NAME}",
                "labels": {
                    "name": "${MASTER_SERVICE_NAME}"
                }
            },
            "spec": {
                "ports": [{
                    "protocol": "TCP",
                    "port": 5432,
                    "targetPort": 5432,
                    "nodePort": 0
                }],
                "selector": {
                    "name": "${MASTER_SERVICE_NAME}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            }
        },

        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "${REPLICA_SERVICE_NAME}",
                "labels": {
                    "name": "${REPLICA_SERVICE_NAME}"
                }
            },
            "spec": {
                "securityContext": {
                },

                "containers": [{
                    "name": "postgres",
                    "image": "172.30.240.45:5000/jeff-project/crunchy-postgres:${CCP_IMAGE_TAG}",
                    "imagePullPolicy": "Always",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },

                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "env": [{
                        "name": "PG_MASTER_HOST",
                        "value": "${MASTER_SERVICE_NAME}"
                    }, {
                        "name": "PG_MASTER_USER",
                        "value": "master"
                    }, {
                        "name": "PG_MASTER_PORT",
                        "value": "5432"
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }, {
                        "name": "PG_MODE",
                        "value": "slave"
                    }, {
                        "name": "SYNC_SLAVE",
                        "value": "${REPLICA_SERVICE_NAME}"
                    }, {
                        "name": "PG_MASTER_PASSWORD",
                        "value": "${MASTER_PASSWORD}"
                    }, {
                        "name": "PG_USER",
                        "value": "testuser"
                    }, {
                        "name": "PG_PASSWORD",
                        "value": "${USER_PASSWORD}"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "${ROOT_PASSWORD}"
                    }],
                    "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }, {
                        "mountPath": "/backup",
                        "name": "backup",
                        "readOnly": true
                    }]
                }],
                "volumes": [{
                    "name": "pgdata",
                    "persistentVolumeClaim": {
                        "claimName": "${MASTER_PVC_NAME}"
                    }
                }, {
                    "name": "backup",
                    "emptyDir": {}
                }]
            }
        }, {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "${MASTER_SERVICE_NAME}",
                "labels": {
                    "name": "${MASTER_SERVICE_NAME}"
                }
            },
            "spec": {
                "securityContext": {
                },

                "containers": [{
                    "name": "postgres",
                    "image": "172.30.240.45:5000/jeff-project/crunchy-postgres:${CCP_IMAGE_TAG}",
                "readinessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/readiness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },
                "livenessProbe": {
                    "exec": {
                        "command": [
                            "/opt/cpm/bin/liveness.sh"
                        ]
                    },
                    "initialDelaySeconds": 40,
                    "timeoutSeconds": 2
                },

                    "imagePullPolicy": "Always",
                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "env": [{
                        "name": "PG_MASTER_USER",
                        "value": "master"
                    }, {
                        "name": "PGHOST",
                        "value": "/tmp"
                    }, {
                        "name": "PG_MODE",
                        "value": "master"
                    }, {
                        "name": "PG_MASTER_PASSWORD",
                        "value": "${MASTER_PASSWORD}"
                    }, {
                        "name": "SYNC_SLAVE",
                        "value": "${REPLICA_SERVICE_NAME}"
                    }, {
                        "name": "PG_USER",
                        "value": "testuser"
                    }, {
                        "name": "PG_PASSWORD",
                        "value": "${USER_PASSWORD}"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "${ROOT_PASSWORD}"
                    }],
                    "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }, {
                        "mountPath": "/backup",
                        "name": "backup",
                        "readOnly": true
                    }]
                }],
                "volumes": [{
                    "name": "pgdata",
                    "persistentVolumeClaim": {
                        "claimName": "${REPLICA_PVC_NAME}"
                    }
                }, {
                    "name": "backup",
                    "emptyDir": {}
                }]
            }
        }
    ]
}
