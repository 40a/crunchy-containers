{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "master-backrest",
        "labels": {
            "name": "master-backrest"
        }
    },
    "spec": {
        "containers": [{
            "name": "master-backrest",
            "securityContext": {
                "privileged": false
            },
            "image": "crunchydata/crunchy-postgres:$CCP_IMAGE_TAG",
            "ports": [{
                "containerPort": 5432,
                "protocol": "TCP"
            }],
            "env": [{
                "name": "PG_MASTER_USER",
                "value": "master"
            }, {
                "name": "PG_MODE",
                "value": "master"
            }, {
                "name": "PG_MASTER_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_USER",
                "value": "testuser"
            }, {
                "name": "PG_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_DATABASE",
                "value": "userdb"
            }, {
                "name": "PG_ROOT_PASSWORD",
                "value": "password"
            }, {
                "name": "ARCHIVE_TIMEOUT",
                "value": "60"
            }],
            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": false
            }, {
                "mountPath": "/backup",
                "name": "backup",
                "readOnly": true
            }, {
                "mountPath": "/pgconf",
                "name": "pgconf",
                "readOnly": true
            }, {
                "mountPath": "/backrestrepo",
                "name": "backrestrepo",
                "readOnly": false
            }]
        }],
        "volumes": [{
            "name": "pgconf",
            "persistentVolumeClaim": {
                "claimName": "pgconf-nfs-pvc"
            }
        }, {
            "name": "backrestrepo",
            "persistentVolumeClaim": {
                "claimName": "backrestrepo-nfs-pvc"
            }
        }, {
            "name": "pgdata",
            "emptyDir": {}
        }, {
            "name": "backup",
            "emptyDir": {}
        }]
    }
}
