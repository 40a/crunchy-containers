{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "kitchensink-master",
        "labels": {
            "name": "kitchensink-master"
        }
    },
    "spec": {
        "containers": [{
            "name": "pg-badger",
            "image": "crunchydata/crunchy-pgbadger:$CCP_IMAGE_TAG",
            "ports": [{
                "containerPort": 15000,
                "protocol": "TCP"
            }],
            "env": [],
            "securityContext": {
                "capabilities": {}
            },
            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": true
            }]
        }, {
            "name": "collect",
            "image": "crunchydata/crunchy-collect:$CCP_IMAGE_TAG",
            "env": [{
                "name": "PG_MASTER_USER",
                "value": "master"
            }, {
                "name": "PG_MASTER_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_PORT",
                "value": "5432"
            }, {
                "name": "PROM_GATEWAY",
                "value": "http://crunchy-promgateway:9091"
            }, {
                "name": "PG_ROOT_PASSWORD",
                "value": "password"
            }],
            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": true
            }]
        }, {
            "name": "kitchensink-master",
            "image": "crunchydata/crunchy-postgres:${CCP_IMAGE_TAG}",
            "ports": [{
                "containerPort": 5432,
                "protocol": "TCP"
            }],
            "env": [{
                "name": "PG_MASTER_USER",
                "value": "master"
            }, {
                "name": "PG_MODE",
                "value": "master"
            }, {
                "name": "PG_MASTER_PASSWORD",
                "value": "password"
            }, {
                "name": "SYNC_SLAVE",
                "value": "kitchensink-sync-slave"
            }, {
                "name": "PG_USER",
                "value": "testuser"
            }, {
                "name": "PG_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_DATABASE",
                "value": "userdb"
            }, {
                "name": "PG_ROOT_PASSWORD",
                "value": "password"
            }],
            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": false
            }, {
                "mountPath": "/backup",
                "name": "backup",
                "readOnly": true
            }]
        }],
        "volumes": [{
            "name": "pgdata",
            "persistentVolumeClaim": {
                "claimName": "kitchensink-master-pvc"
            }
        }, {
            "name": "backup",
            "emptyDir": {}
        }]
    }
}
