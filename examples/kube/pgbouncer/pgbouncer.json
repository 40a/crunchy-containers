{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgbouncer",
        "labels": {
            "name": "pgbouncer"
        }
    },
    "spec": {
        "securityContext": {
            "supplementalGroups": [65534]
        },
        "volumes": [{
            "name": "pgconf",
            "persistentVolumeClaim": {
                "claimName": "crunchy-pvc"
            }
        }],
        "containers": [{
            "name": "pgbouncer",
            "image": "crunchydata/crunchy-pgbouncer:$CCP_IMAGE_TAG",
            "ports": [{
                "containerPort": 5432,
                "protocol": "TCP"
            }],
            "env": [{
                "name": "PG_DATABASE",
                "value": "postgres"
            }, {
                "name": "FAILOVER",
                "value": "yes"
            }, {
                "name": "KUBE_PROJECT",
                "value": "$NAMESPACE"
            }, {
                "name": "SLEEP_TIME",
                "value": "12"
            }, {
                "name": "PG_MASTER_USER",
                "value": "master"
            }, {
                "name": "PG_MASTER_PORT",
                "value": "5432"
            }, {
                "name": "PG_MASTER_SERVICE",
                "value": "ms-master"
            }, {
                "name": "PG_SLAVE_SERVICE",
                "value": "ms-replica"
            }],
            "volumeMounts": [{
                "mountPath": "/pgconf",
                "name": "pgconf",
                "readOnly": true
            }]
        }]
    }
}
