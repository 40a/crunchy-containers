{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "master-pitr-restore",
        "labels": {
            "name": "master-pitr-restore"
        }
    },
    "spec": {
        "volumes": [{
            "name": "pgdata",
            "persistentVolumeClaim": {
                "claimName": "master-pitr-restore-pgdata-pvc"
            }
        }, {
            "name": "pgwal",
            "emptyDir": {}
        }, {
            "name": "recover",
            "persistentVolumeClaim": {
                "claimName": "master-pitr-recover-pvc"
            }
        }, {
            "name": "backup",
            "persistentVolumeClaim": {
                "claimName": "master-pitr-restore-pvc"
            }
        }],
        "containers": [{
            "name": "pg",
            "image": "crunchydata/crunchy-postgres:$CCP_IMAGE_TAG",
            "ports": [{
                "containerPort": 5432,
                "protocol": "TCP"
            }],
            "env": [{
                "name": "PG_MASTER_USER",
                "value": "master"
            }, {
                "name": "PG_MODE",
                "value": "master"
            }, {
                "name": "PG_MASTER_PASSWORD",
                "value": "password"
            }, {
                "name": "PG_USER",
                "value": "testuser"
            }, {
                "name": "PG_PASSWORD",
                "value": "password"
            }, {
                "name": "BACKUP_PATH",
                "value": "master-pitr/2016-10-12-22-14-18"
            }, {
                "name": "RECOVERY_TARGET_NAME",
                "value": "afterchanges"
            }, {
                "name": "PGHOST",
                "value": "/tmp"
            }, {
                "name": "PG_DATABASE",
                "value": "userdb"
            }, {
                "name": "PG_ROOT_PASSWORD",
                "value": "password"
            }],
            "securityContext": {
                "capabilities": {}
            },
            "volumeMounts": [{
                "mountPath": "/pgdata",
                "name": "pgdata",
                "readOnly": false
            }, {
                "mountPath": "/pgwal",
                "name": "pgwal",
                "readOnly": false
            }, {
                "mountPath": "/recover",
                "name": "recover",
                "readOnly": true
            }, {
                "mountPath": "/backup",
                "name": "backup",
                "readOnly": true
            }]
        }]
    }
}
