{
    "kind": "Deployment",
    "apiVersion": "extensions/v1beta1",
    "metadata": {
        "name": "pgpool",
        "labels": {
            "name": "pgpool"
        }
    },
    "spec": {
        "replicas": 1,
        "template": {
            "metadata": {
                "labels": {
                    "name": "pgpool"
                }
            },
            "spec": {

                "containers": [{
                    "name": "pgpool",
                    "image": "$CCP_IMAGE_PREFIX/crunchy-pgpool:$CCP_IMAGE_TAG",
                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "env": [{
                        "name": "PG_USERNAME",
                        "value": "testuser"
                    }, {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    }, {
                        "name": "PG_PRIMARY_SERVICE_NAME",
                        "value": "pr-primary"
                    }, {
                        "name": "PG_REPLICA_SERVICE_NAME",
                        "value": "pr-replica"
                    }],
                    "volumeMounts": [{
                    "name": "pgpool-conf",
                    "mountPath": "/pgconf/pgpoolconfigdir",
                    "readOnly": true
                    }]
                }],
                "volumes": [{
                "name": "pgpool-conf",
                  "secret": {
                      "secretName": "pgpool-secrets"
                  }
                }],
                "restartPolicy": "Always",
                "dnsPolicy": "ClusterFirst"
            }
        },
        "strategy": {
            "type": "RollingUpdate",
            "rollingUpdate": {
                "maxUnavailable": 1,
                "maxSurge": 1
            }
        }
    }
}
