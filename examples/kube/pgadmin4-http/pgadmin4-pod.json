{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgadmin4",
        "labels": {
            "name": "pgadmin4"
        }
    },
    "spec": {
        "securityContext": {
            "supplementalGroups": [
                65534
            ]
        },
        "containers": [
            {
                "name": "pgadmin4",
                "securityContext": {
                    "privileged": false
                },
                "image": "$CCP_IMAGE_PREFIX/crunchy-pgadmin4:$CCP_IMAGE_TAG",
                "ports": [
                    {
                        "containerPort": 5050,
                        "protocol": "TCP"
                    }
                ],
                "env": [
                    {
                        "name": "PGADMIN_SETUP_EMAIL",
                        "valueFrom": {
                            "secretKeyRef": {
                                "name": "pgadmin-secrets",
                                "key": "pgadmin-email"
                            }
                        }
                    },
                    {
                        "name": "PGADMIN_SETUP_PASSWORD",
                        "valueFrom": {
                            "secretKeyRef": {
                                "name": "pgadmin-secrets",
                                "key": "pgadmin-password"
                            }
                        }
                    },
                    {
                        "name": "SERVER_PORT",
                        "value": "5050"
                    }
                ],
                "volumeMounts": [
                    {
                        "mountPath": "/var/lib/pgadmin",
                        "name": "pgadmin",
                        "readOnly": false
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "pgadmin",
                "persistentVolumeClaim": {
                    "claimName": "crunchy-pvc"
                }
            }
        ]
    }
}
