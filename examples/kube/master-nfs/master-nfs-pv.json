{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "master-nfs-pv"
  },
  "spec": {
    "capacity": {
        "storage": "150M"
    },
    "accessModes": [ "ReadWriteMany" ],
    "nfs": {
        "path": "/nfsfileshare",
        "server": "IPADDRESS"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
