{
    "kind": "ReplicationController",
    "apiVersion": "v1",
    "metadata": {
        "name": "slave-rc",
        "namespace": "default",
        "labels": {
            "name": "slave-rc"
        }
    },
    "spec": {
        "replicas": 2,
        "selector": {
            "name": "slave-rc"
        },
        "template": {
            "metadata": {
                "name": "slave-rc",
                "labels": {
                    "name": "slave-rc"
                }
            },
            "spec": {
                "containers": [
                    {
                        "name": "slave-rc",
                        "image": "crunchydata/crunchy-postgres:$CCP_IMAGE_TAG",
                    "env": [{
                        "name": "PG_MASTER_HOST",
                        "value": "master-rc"
                    }, {
                        "name": "PG_MASTER_SERVICE_NAME",
                        "value": "master-rc"
                    }, {
                        "name": "PG_MASTER_PORT",
                        "value": "5432"
                    }, {
                        "name": "PG_MODE",
                        "value": "slave"
                    }, {
                        "name": "PG_MASTER_USER",
                        "value": "master"
                    }, {
                        "name": "PG_MASTER_PASSWORD",
                        "value": "password"
                    }, {
                        "name": "PG_USER",
                        "value": "testuser"
                    }, {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    }, {
                        "name": "PG_DATABASE",
                        "value": "userdb"
                    }, {
                        "name": "PG_ROOT_PASSWORD",
                        "value": "password"
                    }],
                    "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }],

                        "ports": [
                            {
                                "containerPort": 5432,
                                "protocol": "TCP"
                            }
                        ],
                        "resources": {},
                        "terminationMessagePath": "/dev/termination-log"
                    }
                ],
                    "volumes": [{
                        "name": "pgdata",
                        "emptyDir": {}
                    }],

                "restartPolicy": "Always",
                "terminationGracePeriodSeconds": 30,
                "dnsPolicy": "ClusterFirst",
                "securityContext": {
		}
            }
        }
    }
}
