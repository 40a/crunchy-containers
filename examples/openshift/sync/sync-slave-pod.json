{
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "sync-slave",
            "labels": {
                "name": "slave"
            }
        },
        "spec": {
            "containers": [{
                "name": "sync-slave",
                "image": "crunchydata/crunchy-postgres:1.2.1",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_MASTER_HOST",
                    "value": "master"
                }, {
                    "name": "PG_MASTER_USER",
                    "value": "master"
                }, {
                    "name": "PG_MASTER_PORT",
                    "value": "5432"
                }, {
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "PG_MODE",
                    "value": "slave"
                }, {
                    "name": "SYNC_SLAVE",
                    "value": "sync-slave"
                }, {
                    "name": "PG_MASTER_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_USER",
                    "value": "testuser"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_DATABASE",
                    "value": "userdb"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "password"
                }],
                "volumeMounts": [
		{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                },
		{
                    "mountPath": "/backup",
                    "name": "backup",
                    "readOnly": true
                }
		]
            }],
            "volumes": [
	    {
                "name": "pgdata",
                "emptyDir": {}
            },
	    {
                "name": "backup",
                "emptyDir": {}
            }
	    ]
        }
    }
