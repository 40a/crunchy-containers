{
    "kind": "Pod",
    "apiVersion": "v1",
    "metadata": {
        "name": "watch",
        "labels": {
            "name": "watch"
        }
    },
    "spec": {
        "serviceAccount": "pg-watcher",
        "containers": [{
            "name": "watch",
            "image": "crunchydata/crunchy-watch:1.2.1",
            "imagePullPolicy": "Always",
            "env": [{
                "name": "OSE_PROJECT",
                "value": "openshift"
            }, {
                "name": "SLEEP_TIME",
                "value": "20"
            }, {
                "name": "SLAVE_TO_TRIGGER_LABEL",
                "value": "thisone"
            }, {
                "name": "PG_MASTER_SERVICE",
                "value": "m-s-rc-nfs-master"
            }, {
                "name": "PG_SLAVE_SERVICE",
                "value": "m-s-rc-nfs-slave"
            }, {
                "name": "PG_MASTER_PORT",
                "value": "5432"
            }, {
                "name": "PG_MASTER_USER",
                "value": "master"
            }, {
                "name": "PG_DATABASE",
                "value": "postgres"
            }]
        }]
    }
}
