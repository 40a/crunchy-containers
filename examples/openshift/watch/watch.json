{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pg-replica-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "description": "the image tag to use"
    }, {
        "name": "NAMESPACE",
        "description": "the project namespace to use"
    }],
    "objects": [{
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "watch",
            "labels": {
                "name": "watch"
            }
        },
        "spec": {
            "serviceAccount": "pg-watcher",
            "containers": [{
                "name": "watch",
                "image": "crunchydata/crunchy-watch:${CCP_IMAGE_TAG}",
                "env": [{
                    "name": "OSE_PROJECT",
                    "value": "${NAMESPACE}"
                }, {
                    "name": "SLEEP_TIME",
                    "value": "20"
                }, {
                    "name": "PG_PRIMARY_SERVICE",
                    "value": "primary-dc"
                }, {
                    "name": "PG_REPLICA_SERVICE",
                    "value": "replica-dc"
                }, {
                    "name": "PG_PRIMARY_PORT",
                    "value": "5432"
                }, {
                    "name": "HOME",
                    "value": "/tmp"
                }, {
                    "name": "PG_PRIMARY_USER",
                    "value": "primary"
                }, {
                    "name": "PG_DATABASE",
                    "value": "postgres"
                }, {
					"name": "WATCH_PRE_HOOK",
					"value": "/hooks/watch-pre-hook"
				}, {
					"name": "WATCH_POST_HOOK",
					"value": "/hooks/watch-post-hook"
				}],
				"volumeMounts": [{
					"name": "watch-hooks-volume",
					"mountPath": "/hooks"
				}]
            }],
			"volumes": [{
				"name": "watch-hooks-volume",
				"configMap": {
					"name": "watch-hooks-configmap"
				}
			}]
        }
    }]
}
