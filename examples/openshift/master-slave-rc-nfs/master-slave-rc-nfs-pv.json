{
    "apiVersion": "v1",
    "kind": "PersistentVolume",
    "metadata": {
        "name": "master-slave-rc-nfs-pv",
        "labels": {
            "name": "master-slave-rc-nfs-pv"
        }
    },
    "spec": {
        "capacity": {
            "storage": "300M"
        },
        "accessModes": ["ReadWriteMany"],
        "nfs": {
            "path": "/nfsfileshare",
            "server": "$LOCAL_IP"
        },
        "persistentVolumeReclaimPolicy": "Retain"
    }
}
