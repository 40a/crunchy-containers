{
    "kind": "DeploymentConfig",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgpool"
    },
    "spec": {
        "strategy": {
            "type": "Recreate"
        },
        "triggers": [{
            "type": "ConfigChange"
        }],
        "replicas": 1,
        "selector": {
            "name": "pgpool"
        },
        "template": {
            "metadata": {
                "labels": {
                    "name": "pgpool"
                }
            },
            "spec": {
                "securityContext": {
                    $CCP_SECURITY_CONTEXT
                },

                "containers": [{
                    "name": "pgpool",
                    "image": "$CCP_IMAGE_PREFIX/crunchy-pgpool:$CCP_IMAGE_TAG",
                    "ports": [{
                        "containerPort": 5432,
                        "protocol": "TCP"
                    }],
                    "env": [{
                        "name": "PG_USERNAME",
                        "value": "testuser"
                    }, {
                        "name": "PG_PASSWORD",
                        "value": "password"
                    }, {
                        "name": "PG_PRIMARY_SERVICE_NAME",
                        "value": "pr-primary"
                    }, {
                        "name": "PG_REPLICA_SERVICE_NAME",
                        "value": "pr-replica"
                    }],
                    "terminationMessagePath": "/dev/termination-log",
                    "volumeMounts": [{
                        "mountPath": "/pgconf",
                        "name": "pgconf",
                        "readOnly": false
                    }]

                }],

                "volumes": [{
                    "name": "pgconf",
                    "persistentVolumeClaim": {
                        "claimName": "pgpool-pvc"
                    }
                }],
                "restartPolicy": "Always",
                "dnsPolicy": "ClusterFirst"
            }
        }
    }
}
