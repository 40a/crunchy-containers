{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgadmin4",
        "creationTimestamp": null,
        "annotations": {
            "description": "pgAdmin4 without TLS enabled.",
            "iconClass": "icon-database",
            "tags": "database,postgresql,pgadmin4"
        }
    },
    "parameters": [
        {
            "name": "CCP_IMAGE_PREFIX",
            "description": "The image prefix to use"
        },
        {
            "name": "CCP_IMAGE_TAG",
            "description": "The image tag to use"
        },
        {
            "name": "SERVER_PORT",
            "description": "The port for the server to run on",
            "value": "5050"
        }
    ],
    "objects": [
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "pgadmin4",
                "labels": {
                    "name": "pgadmin4"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "pgadmin4",
                        "protocol": "TCP",
                        "port": 5050,
                        "targetPort": 5050,
                        "nodePort": 30000
                    }
                ],
                "selector": {
                    "name": "pgadmin4"
                },
                "type": "NodePort",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Pod",
            "apiVersion": "v1",
            "metadata": {
                "name": "pgadmin4",
                "labels": {
                    "name": "pgadmin4"
                }
            },
            "spec": {
                "securityContext": {
                    "supplementalGroups": [
                        65534
                    ]
                },
                "volumes": [
                    {
                        "name": "pgadmin",
                        "persistentVolumeClaim": {
                            "claimName": "crunchy-pvc"
                        }
                    }
                ],
                "containers": [
                    {
                        "name": "pgadmin",
                        "image": "${CCP_IMAGE_PREFIX}/crunchy-pgadmin4:${CCP_IMAGE_TAG}",
                        "ports": [
                            {
                                "containerPort": 5050,
                                "protocol": "TCP"
                            }
                        ],
                        "env": [
                            {
                                "name": "PGADMIN_SETUP_EMAIL",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "name": "pgadmin-secrets",
                                        "key": "pgadmin-email"
                                    }
                                }
                            },
                            {
                                "name": "PGADMIN_SETUP_PASSWORD",
                                "valueFrom": {
                                    "secretKeyRef": {
                                        "name": "pgadmin-secrets",
                                        "key": "pgadmin-password"
                                    }
                                }
                            }
                        ],
                        "securityContext": {
                            "capabilities": {}
                        },
                        "volumeMounts": [
                            {
                                "mountPath": "/var/lib/pgadmin",
                                "name": "pgadmin",
                                "readOnly": false
                            }
                        ]
                    }
                ]
            }
        }
    ]
}
