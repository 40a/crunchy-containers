{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "kitchensink-sync-save-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "description": "the image tag to use"
    }],
    "objects": [{
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "kitchensink-sync-slave",
            "labels": {
                "name": "kitchensink-sync-slave"
            }
        },
        "spec": {

            "securityContext": {
                "fsGroup": 26
            },

            "containers": [{
                "name": "kitchensink-sync-slave",
                "image": "crunchydata/crunchy-postgres:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_MASTER_HOST",
                    "value": "kitchensink-master"
                }, {
                    "name": "PG_MASTER_USER",
                    "value": "master"
                }, {
                    "name": "PG_MASTER_PORT",
                    "value": "5432"
                }, {
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "PG_MODE",
                    "value": "slave"
                }, {
                    "name": "SYNC_SLAVE",
                    "value": "kitchensink-sync-slave"
                }, {
                    "name": "PG_MASTER_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_USER",
                    "value": "testuser"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_DATABASE",
                    "value": "userdb"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "password"
                }],
                "volumeMounts": [{
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }, {
                    "mountPath": "/backup",
                    "name": "backup",
                    "readOnly": true
                }]
            }],
            "volumes": [{
                "name": "pgdata",
                "persistentVolumeClaim": {
                    "claimName": "kitchensink-sync-slave-pvc"
                }

            }, {
                "name": "backup",
                "emptyDir": {}
            }]
        }
    }]
}
