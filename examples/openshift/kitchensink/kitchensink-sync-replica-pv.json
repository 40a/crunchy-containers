{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "kitchensink-sync-replica-pv"
  },
  "spec": {
    "capacity": {
        "storage": "500M"
    },
    "accessModes": [ "ReadWriteMany" ],
    "nfs": {
        "path": "/nfsfileshare",
        "server": "$LOCAL_IP"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
