{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-grafana-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL Scope Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "description": "The image tag to use"
    }],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "crunchy-grafana",
            "labels": {
                "name": "crunchy-grafana"
            }
        },
        "spec": {
            "ports": [{
                "name": "grafana",
                "protocol": "TCP",
                "port": 3000,
                "targetPort": 3000,
                "nodePort": 0
            }],
            "selector": {
                "name": "crunchy-grafana"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "crunchy-grafana",
            "labels": {
                "name": "crunchy-grafana"
            }
        },
        "spec": {
            "securityContext": {
                "supplementalGroups": [65534]
            },

            "containers": [{
                "name": "crunchy-grafana",
                "image": "crunchydata/crunchy-grafana:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 3000,
                    "protocol": "TCP"
                }],
                "env": [],
                "securityContext": {
                    "capabilities": {}
                },
                "volumeMounts": [{
                    "mountPath": "/data",
                    "name": "data",
                    "readOnly": false
                }]
            }],
            "volumes": [{
                "name": "data",
                "persistentVolumeClaim": {
                    "claimName": "grafana-pvc"
                }
            }]
        }
    }]
}
