{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-prometheus-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL prometheus Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "crunchy-prometheus",
            "labels": {
                "name": "crunchy-prometheus"
            }
        },
        "spec": {
            "ports": [
	    {
                "name": "prometheus",
                "protocol": "TCP",
                "port": 9090,
                "targetPort": 9090,
                "nodePort": 0
            }
	    ],
            "selector": {
                "name": "crunchy-prometheus"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "crunchy-prometheus",
            "labels": {
                "name": "crunchy-prometheus"
            }
        },
        "spec": {
            "containers": [{
                "name": "crunchy-prometheus",
                "image": "crunchydata/crunchy-prometheus:1.2.1",
                "imagePullPolicy": "Always",
                "ports": [
		{
                    "containerPort": 9090,
                    "protocol": "TCP"
                },
		{
                    "containerPort": 9091,
                    "protocol": "TCP"
                }
		],
                "env": [],
                "volumeMounts": [{
                    "mountPath": "/data",
                    "name": "data",
                    "readOnly": false
                }]
            }],
            "volumes": [{
                "name": "data",
                "emptyDir": {}
            }]
        }
    }]
}
