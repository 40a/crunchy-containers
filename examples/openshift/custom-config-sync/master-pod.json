{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pg-replica-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "description": "the image tag to use"
    }],
    "objects": [{
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "csmaster",
            "labels": {
                "name": "csmaster"
            }
        },
        "spec": {
  		"securityContext": {
                "supplementalGroups": [65534]
        	},
            "containers": [{
                "name": "csmaster",
                "image": "crunchydata/crunchy-postgres:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PGHOST",
                    "value": "/tmp"
                }, {
                    "name": "PG_MASTER_USER",
                    "value": "master"
                }, {
                    "name": "PG_MODE",
                    "value": "master"
                }, {
                    "name": "PG_MASTER_PASSWORD",
                    "value": "password"
                }, {
                    "name": "SYNC_SLAVE",
                    "value": "cssyncreplica"
                }, {
                    "name": "PG_USER",
                    "value": "testuser"
                }, {
                    "name": "PG_PASSWORD",
                    "value": "password"
                }, {
                    "name": "PG_DATABASE",
                    "value": "userdb"
                }, {
                    "name": "PG_ROOT_PASSWORD",
                    "value": "password"
                }],
                "volumeMounts": [ {
                    "mountPath": "/pgconf",
                    "name": "pgconf",
                    "readOnly": true
                }, {
                    "mountPath": "/pgdata",
                    "name": "pgdata",
                    "readOnly": false
                }, {
                    "mountPath": "/backup",
                    "name": "backup",
                    "readOnly": true
                }]
            }],
            "volumes": [{
                "name": "pgconf",
                "persistentVolumeClaim": {
                    "claimName": "crunchy-pvc"
                }
            }, {
                "name": "pgdata",
                "persistentVolumeClaim": {
                    "claimName": "crunchy-pvc2"
                }
            }, {
                "name": "backup",
                "emptyDir": {}
            }]
        }
    }]
}
