{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pg-replica-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "PostgreSQL Replication Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "PGBOUNCER_SERVICE_NAME",
        "value": "pgbouncer"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "the image tag to use"
    }],
    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PGBOUNCER_SERVICE_NAME}",
            "labels": {
                "name": "${PGBOUNCER_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PGBOUNCER_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PGBOUNCER_SERVICE_NAME}",
            "labels": {
                "name": "${PGBOUNCER_SERVICE_NAME}"
            }
        },
        "spec": {
            "securityContext": {
                "supplementalGroups": [65534]
            },
            "metadata": {
                "annotations": {
                    "openshift.io/scc": "privileged"
                }
            },
            "volumes": [{
                "name": "pgconf",
                "persistentVolumeClaim": {
                    "claimName": "crunchy-pvc"
                }
            }],
            "containers": [{
                "name": "server",
                "image": "crunchydata/crunchy-pgbouncer:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_DATABASE",
                    "description": "The database name configured in pgbouncer",
                    "value": "postgres"
                }, {
                    "name": "FAILOVER",
                    "description": "failover flag",
                    "value": "yes"
                }, {
                    "name": "OSE_PROJECT",
                    "description": "ose project to login into",
                    "value": "openshift"
                }, {
                    "name": "SLEEP_TIME",
                    "description": "time in secs to sleep between polls",
                    "value": "12"
                }, {
                    "name": "PG_MASTER_USER",
                    "description": "The master user configured in pgbouncer",
                    "value": "master"
                }, {
                    "name": "PG_MASTER_PORT",
                    "description": "The master port configured in pgbouncer",
                    "value": "5432"
                }, {
                    "name": "PG_MASTER_SERVICE",
                    "description": "The master configured in pgbouncer",
                    "value": "ms-master"
                }, {
                    "name": "PG_SLAVE_SERVICE",
                    "description": "The replica configured in pgbouncer",
                    "value": "ms-replica"
                }],
                "volumeMounts": [{
                    "mountPath": "/pgconf",
                    "name": "pgconf",
                    "readOnly": true
                }]
            }]
        }
    }]
}
