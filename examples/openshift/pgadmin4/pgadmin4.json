{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "pgadmin4-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy pgadmin4 Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "CCP_IMAGE_TAG",
        "description": "image tag to use"
    }],

    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "pgadmin4",
            "labels": {
                "name": "pgadmin4"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5050,
                "targetPort": 5050,
                "nodePort": 0
            }],
            "selector": {
                "name": "pgadmin4"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "pgadmin4",
            "labels": {
                "name": "pgadmin4"
            }
        },
        "spec": {
            "containers": [{
                "name": "pgadmin4",
                "image": "crunchydata/crunchy-pgadmin4:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5050,
                    "protocol": "TCP"
                }],
                "env": [],
                "securityContext": {
                    "capabilities": {}
                },


                "volumeMounts": [
		{
                    "mountPath": "/.pgadmin",
                    "name": "rootdata",
                    "readOnly": false
                }
		]
            }],
            "volumes": [
	    {
                "name": "rootdata",
                "persistentVolumeClaim": {
                    "claimName": "pgadmin4-nfs-pvc"
                }
            }
	    ]
        }
    }]
}
