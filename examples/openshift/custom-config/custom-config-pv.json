{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "custom-config-pv"
  },
  "spec": {
    "capacity": {
        "storage": "1Gi"
    },
    "accessModes": [ "ReadWriteMany" ],
    "nfs": {
        "path": "/nfsfileshare/custom-config",
        "server": "$LOCAL_IP"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
