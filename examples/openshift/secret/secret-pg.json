{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "master-with-secrets-example",
        "creationTimestamp": null,
        "annotations": {
            "description": "database using secrets Example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,replication"
        }
    },
    "parameters": [{
        "name": "PG_DATABASE",
        "description": "The name of the database that will be created",
        "value": "userdb"
    }],

    "objects": [{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "secret-pg",
            "labels": {
                "name": "secret-pg"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "secret-pg"
            },
            "portalIP": "None",
            "type": "ClusterIP",
            "sessionAffinity": "None"
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "secret-pg",
            "labels": {
                "name": "secret-pg"
            }
        },
        "spec": {
            "containers": [{
                "name": "secret-pg",
                "image": "crunchydata/crunchy-postgres:rhel7-9.5-1.2.1.1",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_MODE",
                    "value": "master"
                }, {
                    "name": "PG_DATABASE",
                    "value": "${PG_DATABASE}"
                }],
                "securityContext": {
                    "capabilities": {}
                },


                "volumeMounts": [{
                        "mountPath": "/pgdata",
                        "name": "pgdata",
                        "readOnly": false
                    }, {
                        "mountPath": "/pguser",
                        "name": "pguser-volume"
                    }, {
                        "mountPath": "/pgmaster",
                        "name": "pgmaster-volume"
                    }, {
                        "mountPath": "/pgroot",
                        "name": "pgroot-volume"
                    }

                ]
            }],
            "volumes": [{
                    "name": "pgdata",
                    "emptyDir": {}
                }, {
                    "name": "pguser-volume",
                    "secret": {
                        "secretName": "pguser-secret"
                    }
                }, {
                    "name": "pgmaster-volume",
                    "secret": {
                        "secretName": "pgmaster-secret"
                    }
                }, {
                    "name": "pgroot-volume",
                    "secret": {
                        "secretName": "pgroot-secret"
                    }
                }


            ]
        }
    }]
}
