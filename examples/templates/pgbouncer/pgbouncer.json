{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-pgbouncer",
        "creationTimestamp": null,
        "annotations": {
            "description": "pgbouncer pod example",
            "iconClass": "icon-database",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [{
        "name": "PGBOUNCER_SERVICE_NAME",
        "value": "pgbouncer"
    }],
    "objects": [

  {
      "kind": "PersistentVolumeClaim",
      "apiVersion": "v1",
      "metadata": {
        "name": "pgbouncer-pvc"
      },
      "spec": {
        "accessModes": [
          "$PVC_ACCESS_MODE"
        ],
        "resources": {
          "requests": {
            "storage": "10M"
          }
        }
      }
    },
{
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PGBOUNCER_SERVICE_NAME}",
            "labels": {
                "name": "${PGBOUNCER_SERVICE_NAME}"
            }
        },
        "spec": {
            "ports": [{
                "protocol": "TCP",
                "port": 5432,
                "targetPort": 5432,
                "nodePort": 0
            }],
            "selector": {
                "name": "${PGBOUNCER_SERVICE_NAME}"
            }
        },
        "status": {
            "loadBalancer": {}
        }
    }, {
        "kind": "Pod",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PGBOUNCER_SERVICE_NAME}",
            "labels": {
                "name": "${PGBOUNCER_SERVICE_NAME}"
            }
        },
        "spec": {
            "volumes": [{
                "name": "pgconf",
                "persistentVolumeClaim": {
                    "claimName": "pgbouncer-pvc"
                }
            }],
            "containers": [{
                "name": "server",
                "image": "$CRUNCHY_IMAGE_PATH/crunchy-pgbouncer:${CCP_IMAGE_TAG}",
                "ports": [{
                    "containerPort": 5432,
                    "protocol": "TCP"
                }],
                "env": [{
                    "name": "PG_DATABASE",
                    "description": "The database name configured in pgbouncer",
                    "value": "postgres"
                }, {
                    "name": "FAILOVER",
                    "description": "failover flag",
                    "value": "yes"
                }, {
                    "name": "OSE_PROJECT",
                    "description": "ose project to login into",
                    "value": "openshift"
                }, {
                    "name": "SLEEP_TIME",
                    "description": "time in secs to sleep between polls",
                    "value": "12"
                }, {
                    "name": "PG_MASTER_USER",
                    "description": "The master user configured in pgbouncer",
                    "value": "master"
                }, {
                    "name": "PG_MASTER_PORT",
                    "description": "The master port configured in pgbouncer",
                    "value": "5432"
                }, {
                    "name": "PG_MASTER_SERVICE",
                    "description": "The master configured in pgbouncer",
                    "value": "pg-master-rc-dc"
                }, {
                    "name": "PG_SLAVE_SERVICE",
                    "description": "The slave configured in pgbouncer",
                    "value": "pg-slave-rc-dc"
                }],
                "volumeMounts": [{
                    "mountPath": "/pgconf",
                    "name": "pgconf",
                    "readOnly": true
                }]
            }]
        }
    }]
}
