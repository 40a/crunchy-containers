{
  "apiVersion": "v1",
  "kind": "PersistentVolume",
  "metadata": {
    "name": "pgbouncer-pv"
  },
  "spec": {
    "capacity": {
        "storage": "10M"
    },
    "accessModes": [ "$PVC_ACCESS_MODE" ],
    "nfs": {
        "path": "/nfsfileshare/bouncerconfig",
        "server": "$LOCAL_IP"
    },
    "persistentVolumeReclaimPolicy": "Retain"
  }
}
