{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "crunchy-postgres-database-backup",
        "creationTimestamp": null,
        "annotations": {
            "description": "Crunchy PostgreSQL backup of a single database",
            "iconClass": "icon-database",
            "tags": "database,postgresql,crunchy"
        }
    },
    "parameters": [{
        "name": "JOB_NAME",
        "description": "the name to give the backup job",
        "value": "somebackupjob"
    }, {
        "name": "DB_NAME",
        "description": "the service name of the database to backup",
        "value": "somedatabase"
    }, {
        "name": "PVC_NAME",
        "description": "the name to give the backup PVC ",
        "value": "somepvc"
    }, {
        "name": "PVC_SIZE",
        "value": "1Gi",
        "description": "the size to give the backup PVC "
    }, {
        "name": "BACKUP_USER",
        "value": "master",
        "description": "the name of the database user to perform the backup"
    }, {
        "name": "BACKUP_PASS",
        "value": "password",
        "description": "the password of the database user to perform the backup"
    }, {
        "name": "CCP_IMAGE_TAG",
        "description": "image tag to use",
        "value": "rhel7-9.6-1.2.6"
    }],

    "objects": [{
        "kind": "PersistentVolumeClaim",
        "apiVersion": "v1",
        "metadata": {
            "name": "${PVC_NAME}"
        },
        "spec": {
            "accessModes": [
                "ReadWriteOnce"
            ],
            "resources": {
                "requests": {
                    "storage": "${PVC_SIZE}"
                }
            }
        }
    }, {
        "kind": "Job",
        "apiVersion": "extensions/v1beta1",
        "metadata": {
            "name": "${JOB_NAME}"
        },
        "spec": {
            "selector": {
                "matchLabels": {
                    "app": "${JOB_NAME}"
                }
            },
            "template": {
                "metadata": {
                    "name": "${JOB_NAME}",
                    "labels": {
                        "app": "${JOB_NAME}"
                    }
                },
                "spec": {
                    "volumes": [{
                        "name": "pgdata",
                        "persistentVolumeClaim": {
                            "claimName": "${PVC_NAME}"
                        }
                    }],
                    "securityContext": {
                    },
                    "containers": [{
                        "name": "${JOB_NAME}",
                        "image": "172.30.240.45:5000/jeff-project/crunchy-backup:${CCP_IMAGE_TAG}",
                        "imagePullPolicy": "Always",
                        "volumeMounts": [{
                            "mountPath": "/pgdata",
                            "name": "pgdata",
                            "readOnly": false
                        }],
                        "env": [{
                            "name": "BACKUP_HOST",
                            "value": "${DB_NAME}"
                        }, {
                            "name": "BACKUP_USER",
                            "value": "${BACKUP_USER}"
                        }, {
                            "name": "BACKUP_PASS",
                            "value": "${BACKUP_PASS}"
                        }, {
                            "name": "BACKUP_PORT",
                            "value": "5432"
                        }]
                    }],
                    "restartPolicy": "Never"
                }
            }
        }
    }]
}
